    <main class="mt-5">
      <div class="container">
        <div class="row">
          <!-- side filter -->
          <aside class="side-filter col-12 col-md-3">
            <!-- search -->
            <form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
            <!-- sort -->
            <div class="card mt-3">
              <div class="card-header">Sort</div>
              <div class="card-body">
                <h5 class="card-title">Sort by</h5>

                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="sort"
                    id="date"
                  />
                  <label class="form-check-label" for="date"> Date </label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="sort"
                    id="price"
                  />
                  <label class="form-check-label" for="price"> Price </label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="sort"
                    id="title"
                  />
                  <label class="form-check-label" for="title"> Title </label>
                </div>
                <h5 class="card-title mt-3">Order by</h5>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="order"
                    id="desc"
                  />
                  <label class="form-check-label" for="desc">
                    Descending
                  </label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="order"
                    id="asc"
                  />
                  <label class="form-check-label" for="asc"> Ascending </label>
                </div>
              </div>
            </div>

            <!-- filter -->
            <div class="card mt-3">
              <div class="card-header">Filter</div>
              <div class="card-body">
                <h5 class="card-title">Language</h5>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value="arabic"
                    id="arabic"
                  />
                  <label class="form-check-label" for="arabic"> Arabic </label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value="english"
                    id="english"
                  />
                  <label class="form-check-label" for="english">
                    English
                  </label>
                </div>
              </div>
            </div>
