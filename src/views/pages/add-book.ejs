<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head'); %>

  <body>
    <!--Nvabar-->
    <%- include('../partials/navbar')%>

    <!-- Main -->
    <main class="mt-5">
      <div class="container">
        <div class="d-flex align-items-center gap-4">
          <a href="/admin" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back
          </a>
          <h2 class="mb-0">Add new book</h2>
        </div>
        <!-- if error is found -->
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger mt-4" role="alert"><%= error %></div>
        <% } %>

        <!-- if success -->
        <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success mt-4" role="alert"><%= success %></div>
        <% } %>

        <form action="/admin/add-book" method="post">
          <!-- title -->
          <label for="title" class="form-label mt-3">Title</label>
          <input
            required
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="title"
            aria-label="title"
            aria-describedby="basic-addon1"
          />

          <!-- description -->
          <label for="description" class="form-label mt-3">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            placeholder="book description"
            rows="3"
          ></textarea>
          <!-- author -->
          <label for="author" class="form-label mt-3">Author</label>
          <input
            required
            type="text"
            id="author"
            name="author"
            class="form-control"
            placeholder="author"
            aria-label="author"
            aria-describedby="basic-addon1"
          />
          <!-- genre -->
          <label for="genre" class="form-label mt-3">Genre</label>
          <input
            required
            type="text"
            id="genre"
            name="genre"
            class="form-control"
            placeholder="genre"
            aria-label="genre"
            aria-describedby="basic-addon1"
          />
          <!-- language -->
          <label for="language" class="form-label mt-3">Language</label>
          <input
            required
            type="text"
            id="language"
            name="language"
            class="form-control"
            placeholder="language"
            aria-label="language"
            aria-describedby="basic-addon1"
          />
          <!-- isbn -->
          <label for="isbn" class="form-label mt-3">ISBN</label>
          <input
            required
            type="text"
            id="isbn"
            name="isbn"
            class="form-control"
            placeholder="isbn"
            aria-label="isbn"
            aria-describedby="basic-addon1"
          />
          <!-- price -->
          <label for="price" class="form-label mt-3">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">$</span>
            <input
              required
              type="number"
              id="price"
              name="price"
              class="form-control"
              placeholder="price"
              aria-label="price"
              aria-describedby="basic-addon1"
            />
          </div>

          <!-- page count -->
          <label for="page_count" class="form-label mt-3"
            >Number of pages</label
          >
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">page</span>
            <input
              required
              type="number"
              id="page_count"
              name="page_count"
              class="form-control"
              placeholder="pages"
              aria-label="page_count"
              aria-describedby="basic-addon1"
            />
          </div>

          <!-- date -->
          <label for="published_date" class="form-label mt-3"
            >Published date</label
          >
          <input
            required
            type="date"
            id="published_date"
            name="published_date"
            class="form-control"
            placeholder="date"
            aria-label="published_date"
            aria-describedby="basic-addon1"
          />
          <button type="submit" class="btn btn-primary mt-3 w-100">
            Save book
          </button>
        </form>
      </div>
    </main>
    <!-- footer -->
    <%- include('../partials/footer'); %>
    <!-- Bootstrap JS files -->
    <script src="js/bootstrap.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
